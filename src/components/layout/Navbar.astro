---
import ThemeToggle from "@/components/islands/ThemeToggle";
import MobileNav from "@/components/islands/MobileNav";
import ScrollSpy from "@/components/islands/ScrollSpy";

const navItems = [
  { label: "Beranda", href: "#beranda" },
  { label: "What I Do", href: "#what-i-do" },
  { label: "Projects", href: "#projects" },
  { label: "Pendidikan", href: "#education" },
  { label: "Pelatihan", href: "#trainings" },
  { label: "Pengalaman", href: "#experience" },
  { label: "Publikasi", href: "#publications" },
  { label: "Kontak", href: "#contact" }
];

const sectionIds = navItems.map((item) => item.href.replace("#", ""));

const socialItems = [
  { label: "Email", href: "mailto:hello@novanniindipradana.com" },
  { label: "LinkedIn", href: "#" },
  { label: "GitHub", href: "#" },
  { label: "Instagram", href: "#" }
];
---

<header class="sticky top-0 z-40 w-full border-b border-border/60 bg-background/80 backdrop-blur-xl">
  <div class="container flex h-16 items-center justify-between">
    <a href="#beranda" class="text-sm font-semibold tracking-[0.2em] uppercase">
      novanniindipradana
    </a>

    <nav class="hidden items-center gap-6 text-sm font-medium md:flex">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="nav-link"
          data-nav-link
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3">
      <ThemeToggle client:load />
      <div class="md:hidden">
        <MobileNav client:load brand="novanniindipradana" items={navItems} socials={socialItems} />
      </div>
    </div>
  </div>
  <ScrollSpy client:load sectionIds={sectionIds} />
</header>
