---
import ThemeToggle from "@/components/islands/ThemeToggle";
import MobileNav from "@/components/islands/MobileNav";
import ScrollSpy from "@/components/islands/ScrollSpy";

const navItems = [
  { label: "Beranda", href: "#beranda" },
  { label: "Keahlian", href: "#keahlian" },
  { label: "Proyek", href: "#proyek" },
  { label: "Pengalaman", href: "#pengalaman" },
  { label: "Organisasi", href: "#organisasi" },
  { label: "Pendidikan", href: "#pendidikan" },
  { label: "Pelatihan", href: "#pelatihan" },
  { label: "Publikasi & Paten", href: "#publikasi-paten" },
  { label: "Kontak", href: "#kontak" }
];

const sectionIds = navItems.map((item) => item.href.replace("#", ""));

const socialItems = [
  { label: "Email", href: "mailto:novanindipradana@gmail.com" },
  { label: "LinkedIn", href: "https://www.linkedin.com/in/novanniindipradana", external: true },
  { label: "GitHub", href: "https://github.com/pradanain", external: true },
  { label: "Instagram", href: "https://instagram.com/pradanawae", external: true }
];
---

<header class="sticky top-0 z-40 w-full border-b border-border/60 bg-background/75 backdrop-blur-xl">
  <div aria-hidden="true" class="pointer-events-none absolute inset-x-0 top-0 h-px bg-linear-to-r from-transparent via-border to-transparent"></div>

  <div class="container flex h-16 items-center gap-3">
    <a
      href="#beranda"
      class="group inline-flex items-center gap-2 rounded-lg px-2 py-1 text-sm font-semibold tracking-[0.2em] uppercase text-foreground transition hover:bg-secondary/60 focus:outline-none focus:ring-2 focus:ring-primary/40"
      aria-label="Kembali ke Beranda"
    >
      <span class="hidden sm:inline">novanniindipradana</span>
      <span class="sm:hidden">nip</span>
    </a>

    <nav class="hidden flex-1 items-center justify-center gap-1 lg:flex" aria-label="Navigasi utama">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="nav-link"
          data-nav-link
        >
          {item.label}
        </a>
      ))}
    </nav>

    <div class="ml-auto flex items-center gap-2">
      <ThemeToggle client:idle />

      <div class="lg:hidden">
        <MobileNav
          client:media="(max-width: 1024px)"
          brand="novanniindipradana"
          items={navItems}
          socials={socialItems}
        />
      </div>
    </div>
  </div>

  <ScrollSpy client:idle sectionIds={sectionIds} />
</header>

<style>
  .nav-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    white-space: nowrap;
    color: hsl(var(--muted-foreground));
    transition: background-color 150ms ease, color 150ms ease;
  }

  .nav-link:hover {
    background: hsl(var(--secondary) / 0.6);
    color: hsl(var(--foreground));
  }

  .nav-link:focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px hsl(var(--primary) / 0.35);
  }

  .nav-link[data-active="true"] {
    color: hsl(var(--foreground));
    background: hsl(var(--secondary) / 0.8);
  }

  .nav-link[data-active="true"]::after {
    content: none;
  }
</style>
