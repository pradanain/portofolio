---
import { education } from "@/data/education";
---

<section id="education" class="py-16 md:py-24">
  <div class="container">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2 class="mb-4 text-3xl font-bold text-foreground sm:text-4xl lg:text-5xl">
        Riwayat Pendidikan
      </h2>

    </div>

    <div class="flex flex-wrap items-center justify-center">
      {education.map((item) => {
        const Tag = item.url ? "a" : "div";
        const attrs = item.url
          ? { href: item.url, target: "_blank", rel: "noreferrer noopener" }
          : {};

        return (
          <Tag
            {...attrs}
            class="max-w-30 mx-4 py-4 transition duration-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/40 lg:mx-6 xl:mx-8"
            title={item.school}
          >
            <img
              src={item.logo}
              alt={item.school}
              class="h-auto w-full"
              loading="lazy"
              decoding="async"
            />
          </Tag>
        );
      })}
    </div>
  </div>
</section>
