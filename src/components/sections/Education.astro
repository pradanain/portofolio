---
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { education } from "@/data/education";
---

<section id="education" class="section reveal" data-reveal>
  <div class="container space-y-10">
    <div>
      <h2 class="section-title">Riwayat Pendidikan</h2>
      <p class="section-subtitle">Perjalanan akademik dan fondasi keilmuan.</p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {education.map((item) => (
        <Card className="h-full">
          <CardHeader className="flex flex-row items-center gap-4">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg border border-border/60 bg-secondary">
              <img src={item.logo} alt={`${item.school} logo`} class="h-6 w-6" loading="lazy" />
            </div>
            <div>
              <CardTitle>{item.school}</CardTitle>
              <CardDescription>{item.program}</CardDescription>
            </div>
          </CardHeader>
          <CardContent className="space-y-2">
            <p class="text-sm font-medium text-foreground">{item.period}</p>
            <p class="text-sm text-muted-foreground">{item.description}</p>
          </CardContent>
        </Card>
      ))}
    </div>
  </div>
</section>
