---
import { Badge } from "@/components/ui/badge";
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from "@/components/ui/card";
import { organizations } from "@/data/organizations";

const visibleCount = 3;
const visibleOrgs = organizations.slice(0, visibleCount);
const hiddenOrgs = organizations.slice(visibleCount);
---

<section id="organisasi" class="section">
  <div aria-hidden="true" class="section-bg">
    <div class="absolute -top-24 left-10 h-72 w-72 rounded-full bg-primary/10 blur-3xl"></div>
    <div class="absolute -bottom-24 right-10 h-72 w-72 rounded-full bg-accent/10 blur-3xl"></div>
  </div>

  <div class="container relative space-y-10">
    <div class="mx-auto max-w-2xl space-y-3 text-center">
      <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">
        Organisasi
      </h2>
      <p class="text-base leading-relaxed text-muted-foreground md:text-lg">
        Peran kepanitiaan, komunitas, dan kontribusi sosial.
      </p>
    </div>

    <div class="space-y-6">
      {visibleOrgs.map((org, idx) => {
        const index = idx + 1;

        return (
          <div class="relative pl-8">
            <div
              aria-hidden="true"
              class="absolute left-3 top-0 bottom-0 w-px bg-border/80"
            ></div>

            <div
              aria-hidden="true"
              class="absolute left-2.25 top-8 h-3 w-3 rounded-full bg-primary ring-4 ring-background"
            ></div>

            <Card className="group border-border/60 bg-card/70 transition hover:-translate-y-0.5 hover:bg-card hover:shadow-sm focus-within:ring-2 focus-within:ring-primary/40">
              <CardHeader className="space-y-3">
                <div class="flex flex-wrap items-start justify-between gap-3">
                  <div class="flex min-w-0 items-center gap-3">
                    <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl border border-border/60 bg-secondary">
                      <img
                        src={org.logo}
                        alt={`${org.organization} logo`}
                        class="h-6 w-6"
                        loading="lazy"
                        decoding="async"
                      />
                    </div>

                    <div class="min-w-0">
                      <CardTitle className="truncate">{org.organization}</CardTitle>

                      <CardDescription className="mt-1">
                        <span class="font-medium text-foreground">{org.role}</span>
                      </CardDescription>
                    </div>
                  </div>

                  <Badge variant="secondary" className="shrink-0 rounded-full">
                    {org.period}
                  </Badge>
                </div>

                <p class="text-sm text-muted-foreground">{org.location}</p>
              </CardHeader>

              <CardContent className="space-y-4">
                {org.summary ? (
                  <p class="text-sm leading-relaxed text-foreground">
                    {org.summary}
                  </p>
                ) : null}

                {org.highlights?.length ? (
                  <ul class="space-y-2 pl-5 text-sm text-muted-foreground">
                    {org.highlights.map((item) => (
                      <li class="list-disc leading-relaxed">{item}</li>
                    ))}
                  </ul>
                ) : null}

                {org.skills?.length ? (
                  <div class="flex flex-wrap gap-2 pt-1">
                    {org.skills.map((skill) => (
                      <Badge variant="outline" className="rounded-full">
                        {skill}
                      </Badge>
                    ))}
                  </div>
                ) : null}

                <div class="pt-1 text-xs text-muted-foreground">
                  {String(index).padStart(2, "0")}
                </div>
              </CardContent>
            </Card>
          </div>
        );
      })}
    </div>

    {hiddenOrgs.length ? (
      <details class="details mt-4">
        <summary class="details-summary mx-auto flex w-fit items-center gap-2 rounded-full border border-border/60 bg-secondary/60 px-4 py-2 text-sm font-medium text-foreground transition hover:bg-secondary">
          <span>Lihat lebih banyak</span>
          <svg
            class="details-chevron h-4 w-4"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 0 1 1.06.02L10 10.94l3.71-3.71a.75.75 0 1 1 1.06 1.06l-4.24 4.25a.75.75 0 0 1-1.06 0L5.21 8.29a.75.75 0 0 1 .02-1.08Z"
              clip-rule="evenodd"
            />
          </svg>
        </summary>

        <div class="details-content pt-6">
          <div class="space-y-6">
            {hiddenOrgs.map((org, idx) => {
              const index = idx + visibleCount + 1;

              return (
                <div class="relative pl-8">
                  <div
                    aria-hidden="true"
                    class="absolute left-3 top-0 bottom-0 w-px bg-border/80"
                  ></div>

                  <div
                    aria-hidden="true"
                    class="absolute left-2.25 top-8 h-3 w-3 rounded-full bg-primary ring-4 ring-background"
                  ></div>

                  <Card className="group border-border/60 bg-card/70 transition hover:-translate-y-0.5 hover:bg-card hover:shadow-sm focus-within:ring-2 focus-within:ring-primary/40">
                    <CardHeader className="space-y-3">
                      <div class="flex flex-wrap items-start justify-between gap-3">
                        <div class="flex min-w-0 items-center gap-3">
                          <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-xl border border-border/60 bg-secondary">
                            <img
                              src={org.logo}
                              alt={`${org.organization} logo`}
                              class="h-6 w-6"
                              loading="lazy"
                              decoding="async"
                            />
                          </div>

                          <div class="min-w-0">
                            <CardTitle className="truncate">{org.organization}</CardTitle>

                            <CardDescription className="mt-1">
                              <span class="font-medium text-foreground">{org.role}</span>
                            </CardDescription>
                          </div>
                        </div>

                        <Badge variant="secondary" className="shrink-0 rounded-full">
                          {org.period}
                        </Badge>
                      </div>

                      <p class="text-sm text-muted-foreground">{org.location}</p>
                    </CardHeader>

                    <CardContent className="space-y-4">
                      {org.summary ? (
                        <p class="text-sm leading-relaxed text-foreground">
                          {org.summary}
                        </p>
                      ) : null}

                      {org.highlights?.length ? (
                        <ul class="space-y-2 pl-5 text-sm text-muted-foreground">
                          {org.highlights.map((item) => (
                            <li class="list-disc leading-relaxed">{item}</li>
                          ))}
                        </ul>
                      ) : null}

                      {org.skills?.length ? (
                        <div class="flex flex-wrap gap-2 pt-1">
                          {org.skills.map((skill) => (
                            <Badge variant="outline" className="rounded-full">
                              {skill}
                            </Badge>
                          ))}
                        </div>
                      ) : null}

                      <div class="pt-1 text-xs text-muted-foreground">
                        {String(index).padStart(2, "0")}
                      </div>
                    </CardContent>
                  </Card>
                </div>
              );
            })}
          </div>
        </div>
      </details>
    ) : null}
  </div>
</section>
