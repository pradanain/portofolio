---
import { trainings } from "@/data/trainings";
---

<section id="trainings" class="py-16 md:py-24">
  <div class="container">
    <div class="mx-auto mb-16 max-w-3xl text-center">
      <h2 class="mb-4 text-3xl font-bold text-foreground sm:text-4xl lg:text-5xl">
        Riwayat Bootcamp / Pelatihan
      </h2>
    </div>

    <div class="flex flex-wrap items-center justify-center">
      {trainings.map((training) => {
        const Tag = training.url ? "a" : "div";
        const attrs = training.url
          ? { href: training.url, target: "_blank", rel: "noreferrer noopener" }
          : {};

        return (
          <Tag
            {...attrs}
            class="max-w-30 mx-4 py-4 transition duration-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary/40 lg:mx-6 xl:mx-8"
            title={training.provider}
          >
            <img
              src={training.logo}
              alt={training.provider}
              class="h-auto w-full"
              loading="lazy"
              decoding="async"
            />
          </Tag>
        );
      })}
    </div>
  </div>
</section>
