---
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import RoleRotator from "@/components/islands/RoleRotator";

const roles = ["Software Developer", "Data Engineer", "IT Support"];
// Social icons intentionally hidden in hero.
---

<section id="beranda" class="section reveal" data-reveal>
  <div class="container">
    <div class="grid items-center gap-12 md:grid-cols-[1.15fr_0.85fr]">
      <div class="space-y-12 md:space-y-14">
        <Badge variant="outline" className="w-fit">
          Available for collaboration
        </Badge>
        <div class="space-y-5">
          <p class="text-sm uppercase tracking-[0.35em] text-muted-foreground">Halo, Saya</p>
          <h1 class="text-4xl font-semibold tracking-tight md:text-6xl">
            Novanni <span class="text-gradient">Indi Pradana</span>
          </h1>
        </div>
        <div class="pt-1">
          <RoleRotator client:load roles={roles} />
        </div>

        <div class="flex flex-wrap items-center gap-4 pt-1">
          <Button
            asChild
            size="lg"
            className="shadow-lg ring-2"
            style={{
              backgroundColor: "#2563EB",
              color: "#FFFFFF",
              borderColor: "#60A5FA"
            }}
          >
            <a href="/cv.pdf" download>
              CV
            </a>
          </Button>
          <Button
            asChild
            size="lg"
            className="shadow-lg ring-2"
            style={{
              backgroundColor: "#F59E0B",
              color: "#0F172A",
              borderColor: "#FDE68A"
            }}
          >
            <a href="#contact">Hubungi Saya</a>
          </Button>
        </div>
      </div>

      <div class="relative mx-auto w-full max-w-sm">
        <div class="absolute -inset-4 rounded-[28px] bg-gradient-to-br from-primary/20 via-transparent to-accent/20 blur-2xl"></div>
        <div class="relative overflow-hidden rounded-[28px] border border-border/60 bg-card p-4 shadow-soft">
          <img
            src="/profile.jpg"
            alt="Foto Novanni Indi Pradana"
            class="h-[420px] w-full rounded-2xl object-cover"
            loading="lazy"
          />
          <div class="mt-4 rounded-2xl border border-border/60 bg-secondary/60 p-4 text-sm">
            <p class="font-medium text-foreground">"Build clean data flows and elegant interfaces."</p>
            <p class="mt-1 text-xs text-muted-foreground">- Personal tagline</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
