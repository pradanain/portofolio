---
import { featuredProjects, projects } from "@/data/projects";
import ProjectCard from "./ProjectCard.astro";

const allProjects = [...featuredProjects, ...projects];
---

<section id="projects" class="relative overflow-hidden py-16 md:py-24">
  <!-- subtle background -->
  <div aria-hidden="true" class="pointer-events-none absolute inset-0">
    <div class="absolute -top-24 left-10 h-72 w-72 rounded-full bg-primary/10 blur-3xl"></div>
    <div class="absolute -bottom-24 right-10 h-72 w-72 rounded-full bg-accent/10 blur-3xl"></div>
  </div>

  <div class="container relative space-y-12">
    <div class="mx-auto max-w-2xl space-y-3 text-center">
      <h2 class="text-3xl font-semibold tracking-tight md:text-4xl">Proyek</h2>
      <p class="text-base leading-relaxed text-muted-foreground md:text-lg">
        Kumpulan proyek pilihan yang pernah saya kerjakan.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {allProjects.map((project) => (
        <ProjectCard project={project} featured={project.featured} />
      ))}
    </div>
  </div>
</section>
