---
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { featuredProjects, projects } from "@/data/projects";
---

<section id="projects" class="section reveal" data-reveal>
  <div class="container space-y-12">
    <div>
      <h2 class="section-title">Project</h2>
      <p class="section-subtitle">Pilihan project yang menonjol serta kumpulan karya lainnya.</p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
      {featuredProjects.map((project) => (
        <Card className="h-full border-primary/30">
          <CardHeader>
            <div class="flex items-start justify-between gap-3">
              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-border/60 bg-secondary">
                  <img src={project.logo} alt={`${project.title} logo`} class="h-6 w-6" loading="lazy" />
                </div>
                <div>
                  <CardTitle>{project.title}</CardTitle>
                  <CardDescription>{project.description}</CardDescription>
                </div>
              </div>
              <Badge>{project.category}</Badge>
            </div>
          </CardHeader>
          <CardContent>
            <div class="flex flex-wrap gap-2">
              {project.stack.map((item) => (
                <Badge variant="outline">{item}</Badge>
              ))}
            </div>
          </CardContent>
          <CardFooter className="grid w-full gap-2 sm:grid-cols-2">
            {project.demoUrl ? (
              <Button asChild size="sm" className="w-full">
                <a href={project.demoUrl} target="_blank" rel="noreferrer">Demo</a>
              </Button>
            ) : null}
            {project.repoUrl ? (
              <Button asChild size="sm" variant="outline" className="w-full">
                <a href={project.repoUrl} target="_blank" rel="noreferrer">Repo</a>
              </Button>
            ) : null}
          </CardFooter>
        </Card>
      ))}
    </div>

    {projects.length ? (
      <details class="details rounded-2xl border border-border/60 bg-card/60">
        <summary class="details-summary cursor-pointer list-none px-6 py-4">
          <div class="flex items-center justify-center gap-2 text-sm font-semibold text-primary">
            <span>Lihat lebih banyak</span>
            <svg class="details-chevron h-4 w-4" viewBox="0 0 20 20" fill="none" aria-hidden="true">
              <path
                d="M5 7.5L10 12.5L15 7.5"
                stroke="currentColor"
                stroke-width="1.8"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </div>
        </summary>
        <div class="details-content px-6 pb-6">
          <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
            {projects.map((project) => (
              <Card className="h-full">
                <CardHeader>
                  <div class="flex items-start justify-between gap-3">
                    <div class="flex items-start gap-3">
                      <div class="flex h-10 w-10 items-center justify-center rounded-lg border border-border/60 bg-secondary">
                        <img src={project.logo} alt={`${project.title} logo`} class="h-6 w-6" loading="lazy" />
                      </div>
                      <div>
                        <CardTitle>{project.title}</CardTitle>
                        <CardDescription>{project.description}</CardDescription>
                      </div>
                    </div>
                    <Badge variant="outline">{project.category}</Badge>
                  </div>
                </CardHeader>
                <CardContent>
                  <div class="flex flex-wrap gap-2">
                    {project.stack.map((item) => (
                      <Badge variant="outline">{item}</Badge>
                    ))}
                  </div>
                </CardContent>
                <CardFooter className="grid w-full gap-2 sm:grid-cols-2">
                  {project.demoUrl ? (
                    <Button asChild size="sm" variant="secondary" className="w-full">
                      <a href={project.demoUrl} target="_blank" rel="noreferrer">Demo</a>
                    </Button>
                  ) : null}
                  {project.repoUrl ? (
                    <Button asChild size="sm" variant="ghost" className="w-full">
                      <a href={project.repoUrl} target="_blank" rel="noreferrer">Repo</a>
                    </Button>
                  ) : null}
                </CardFooter>
              </Card>
            ))}
          </div>
        </div>
      </details>
    ) : null}
  </div>
</section>
